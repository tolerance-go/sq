@keyframes mova {
    0% {
        background-position: 200% 0;
    }

    to {
        background-position: -200% 0;
    }
}

.paper {
    cursor: pointer;

    &.hidden {
        border-radius: 5px;
        transition: width, height 0.15s ease-out;
        background-image: linear-gradient(
            270deg,
            #fafafa,
            #eaeaea,
            #eaeaea,
            #fafafa
        );
        background-size: 400% 100%;
        animation: mova 8s ease-in-out infinite;
        display: block;
        width: auto;

        span {
            visibility hidden;
        }
    }
}